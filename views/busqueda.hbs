<main id="search">
    <h2 class="texto-alineado">Realice una búsqueda</h2>

    <form action="/busqueda" method="post" id="search-form">
        <p>
            <label for="search-form__titulo">Título: </label>
            <input type="text" id="search-form__titulo" name="titulo">
        </p>

        <p>
            <label for="search-form__autor">Autor: </label>
            <input type="text" id="search-form__autor" name="autor">
        </p>

        <p>
            <label for="search-form__fecha">Año: </label>
            <input type="number" id="search-form__fecha" max="2021" name="fecha">
        </p>

        <p>
            <label for="search-form__isbn">ISBN: </label>
            <input type="number" id="search-form__number" min=0 name="isbn">
        </p>

        <!-- <p>
            <label for="search-form__puntuacion">Puntuacion: </label>
            0<input type="range" step="1" min="0" max="5">5
        </p> -->

        <p>
            <label for="search-form__puntuacion">Puntuacion: </label>
            <select name="puntuacion" id="search-form__puntuacion">
                <option disabled selected value style="display:none"></option>
                <option value="5">5 Estrellas</option>
                <option value="4">4 Estrellas</option>
                <option value="3">3 Estrellas</option>
                <option value="2">2 Estrellas</option>
                <option value="1">1 Estrella</option>
            </select>
        </p>

        <p>
            <button>Buscar</button>
        </p>

    </form>
    
    <script>
        var $form = document.getElementById('search-form');
        $form.addEventListener('submit', (e)=>{
            e.preventDefault();
            $form.style.display = 'none';
        });
    </script>

    {{#if message}}
        <p>{{message}}</p>
    {{/if}}
</main>
